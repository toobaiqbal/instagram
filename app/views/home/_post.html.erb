<section class="post">
  <div class="user">
    <div class="avatar">
      <img src="a.jpg">
    </div>
    <div class="username">
      <%= post.user.username %>
    </div>
  </div>
  <%= image_tag post.image, class: 'main-image' %>
  <div class="description">
    <%= post.description %>
    <%= render partial: "posts/description", locals: {post: post} %>
  </div>
</section>