<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-light bg-light d-flex">
    <div class="container">
      <a class="navbar-brand" href="#">
        <%= fa_stacked_icon "camera inverse", base: "square"%>
        <%= link_to "Instagram", root_path, class: "navbar-brand" %>
      </a>
      <div class="m-auto">
        <form class="form-inline search-form">
          <input class="form-control mr-sm-2" type="search" placeholder="#search" aria-label="Search">
        </form>
      </div>
      <div class="user-section">
        <a href="https://www.instagram.com/"><i class="fa fa-instagram"></i></a>
        <a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
        <a href="https://www.snapchat.com/"><i class="fa fa-snapchat"></i></a>


        <% if user_signed_in? %>
          <a href="<%= destroy_user_session_path%>" data-method="delete">
            <i class="fa fa-user"></i>
          </a>
        <% else %>
          <a href="<%= new_user_session_path%>">
            <i class="fa fa-sign-in"></i>
          </a>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "My Profile", current_user %>
        <% end %>

      </div>
    </div>
  </nav>

  <!--Main content-->
  <main class="container" style="min-height: 500px;">
    <%= yield %>
  </main>

  <!--Footer-->
  <footer class="container footer">
    <nav class="navbar d-flex">
      <ul>
        <li>ABOUT US
        </li>
        <li>SUPPORT</li>
        <li>PRESS</li>
        <li>API</li>
        <li>JOBS</li>
        <li>PRIVACY</li>
        <li>TERMS</li>
        <li>DIRECTORY</li>
        <li>PROFILES</li>
        <li>HASHTAGS</li>
        <li>LANGUAGE</li>
      </ul>
      <p> Â© 2018 INSTAGRAM </p>
    </nav>
  </footer>
  </body>
</html>
